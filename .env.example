# AWS S3 Configuration (only needed for local development, not on EC2 with IAM role)
# AWS_ACCESS_KEY_ID=your_access_key_id
# AWS_SECRET_ACCESS_KEY=your_secret_access_key

# AWS S3 Bucket Information
AWS_STORAGE_BUCKET_NAME=donshack-project-media-spring-2025
AWS_S3_REGION_NAME=us-west-1

# Django Settings
SECRET_KEY=generate_a_strong_secret_key_for_production
DEBUG=False

# Database Configuration for PostgreSQL
DATABASE_URL=postgres://username:password@hostname:5432/database_name

# CORS Settings - Frontend domain for production
FRONTEND_DOMAIN=https://your-frontend-domain.com

# Auth0 Settings (for frontend - can be added to your frontend build environment)
# REACT_APP_AUTH0_DOMAIN=donshack24.us.auth0.com
# REACT_APP_AUTH0_CLIENT_ID=your_client_id
# REACT_APP_AUTH0_REDIRECT_URI=https://your-frontend-domain.com/#/profile

# EC2 Instance Settings
# Include this in your deployment CI/CD, not in the application itself
# EC2_HOST=your-ec2-instance-public-dns
# EC2_SSH_USER=ubuntu
